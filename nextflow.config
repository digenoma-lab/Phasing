process{
    withName: "fill_AC|remove_missing|bcftools_index|remove_duplicates|create_index|create_index_1000G" {
        container = "community.wave.seqera.io/library/bcftools:1.21--4335bec1d7b44d11"
        memory = "120G"
        cpus = 16
    }
    withName: "beagle" {
        container = "community.wave.seqera.io/library/bcftools_beagle:88a2477768c21899"
        memory = "120G"
        cpus = 16
    }
    withName: "fasta_index" {
        container = "oras://community.wave.seqera.io/library/samtools:1.22.1--9a10f06c24cdf05f"
        memory = "120G"
        cpus = 16
    }
}
profiles {
    kutral {
        singularity.enabled     = true
        singularity.autoMounts  = true
	    singularity.runOptions = ' --bind /mnt/beegfs/labs/ '
        conda.enabled           = false
        docker.enabled          = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
        process.executor = 'slurm'
        process.queue = 'ngen-ko'
        //executor.queueSize = 10
    }
    local {
        singularity.enabled     = true
        singularity.autoMounts  = true
	    singularity.runOptions = ' --bind /mnt/beegfs/labs/ '
        conda.enabled           = false
        docker.enabled          = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
    }
}
def trace_timestamp = new java.util.Date().format( 'yyyy-MM-dd_HH-mm-ss')
timeline {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_timeline_${trace_timestamp}.html"
}
report {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_report_${trace_timestamp}.html"
}
trace {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_trace_${trace_timestamp}.txt"
}
dag {
    enabled = true
    file    = "${params.outdir}/pipeline_info/pipeline_dag_${trace_timestamp}.html"
}
manifest {
    defaultBranch = 'main'
    author = 'Gabriel Cabas'
    version = '0.0.1'
}